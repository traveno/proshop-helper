{
  "name": "ProShop Helper",
  "description": "Generates work order tags. Report bugs to Stephen.",
  "author": "Stephen Fike",
  "version": "3.0.0",
  "version_name": "3.0.0 beta",
  "manifest_version": 3,
  "background": {
    "service_worker": "./js/background.js"
  },
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["https://machinesciences.adionsystems.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://machinesciences.adionsystems.com/procnc/workorders/20*/*"],
      "js": ["./js/libs/jquery-3.0.0.min.js", "./js/build/customButton.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://machinesciences.adionsystems.com/procnc/ots*"],
      "js": ["./js/libs/jquery-3.0.0.min.js", "./js/build/customCots.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://machinesciences.adionsystems.com/procnc/procncAdmin/fileserver/editfile*"],
      "js": ["./js/libs/jquery-3.0.0.min.js", "./js/build/customRename.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://machinesciences.adionsystems.com/procnc/purchaseorders/20*/*"],
      "js": ["./js/libs/jquery-3.0.0.min.js", "./js/build/customPO.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["./js/libs/customButton.html", "./js/libs/jquery-3.0.0.min.js"],
      "matches": ["https://machinesciences.adionsystems.com/*"]
    }
  ]
}