{
  "name": "ProShop Helper",
  "description": "Generates work order tags. Report bugs to Stephen.",
  "author": "Stephen Fike",
  "version": "2.0.0",
  "version_name": "2.0.0 beta",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["https://machinesciences.adionsystems.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://machinesciences.adionsystems.com/procnc/workorders/2021/*"],
      "js": ["jquery-3.0.0.min.js", "customButton.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["customButton.html", "jquery-3.0.0.min.js"],
      "matches": ["https://machinesciences.adionsystems.com/*"]
    }
  ]
}